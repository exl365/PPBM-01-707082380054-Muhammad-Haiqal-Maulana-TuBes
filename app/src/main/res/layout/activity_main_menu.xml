<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="@drawable/bgmainmenu">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuib"
        android:text="Latifa School Companion App"
        android:layout_below="@id/circleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/latifa_schoollogo"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="#CCCCCC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/galeri"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/judul"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/logogaleri"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/galeri"
        android:layout_centerInParent="true"
        android:fontFamily="@font/seguibl"
        android:text="Galeri Kegiatan Sekolah" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logokontak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/galeri"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logokontak"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logokontak"
        android:layout_centerInParent="true"
        android:fontFamily="@font/seguibl"
        android:text="Kontak Sekolah" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoinfo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/logokontak"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logoinfo"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoinfo"
        android:layout_centerInParent="true"
        android:fontFamily="@font/seguibl"
        android:text="Informasi Mengenai Sekolah" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logologout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/logoinfo"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logologout"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logologout"
        android:layout_centerInParent="true"
        android:fontFamily="@font/seguibl"
        android:text="Keluar Dari APP" />
</RelativeLayout>
